package com.clush.util;

import org.springframework.security.core.context.SecurityContextHolder;
import org.springframework.security.core.userdetails.UserDetails;

import com.clush.auth.CustomUserDetails;

public class UserUtil {

    public static String getUserId() {
        Object principal = SecurityContextHolder.getContext().getAuthentication().getPrincipal();
        if (principal instanceof UserDetails) {
            return ((UserDetails) principal).getUsername();
        } else {
            return principal.toString(); 
        }
    }
    
    public static Long getId() {
        Object principal = SecurityContextHolder.getContext().getAuthentication().getPrincipal();
        if (principal instanceof CustomUserDetails) {
            CustomUserDetails customUserDetails = (CustomUserDetails) principal;
            return customUserDetails.getId();  
        } else if (principal instanceof UserDetails) {
            // 만약 principal이 UserDetails지만 CustomUserDetails가 아닌 경우
            throw new IllegalStateException("Principal is not an instance of CustomUserDetails");
        } else {
            throw new IllegalStateException("Principal is not an instance of UserDetails");
        }
    }
}
